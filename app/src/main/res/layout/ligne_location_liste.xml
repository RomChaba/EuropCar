<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ligne_id_vehicule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VéhiculeID"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ligne_date_debut"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date Début"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" - "
            />
        <TextView
            android:id="@+id/ligne_date_fin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date Fin"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/ligne_tarif_journalier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarif Journalier"
        />

</LinearLayout>