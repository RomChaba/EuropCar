<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ligne_id_vehicule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VÃ©hiculeID"
        />
    <TextView
        android:id="@+id/ligne_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Libelle"
        />
    <TextView
        android:id="@+id/ligne_nbPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NbPlaces"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ligne_location_min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location min"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" - "
            />
        <TextView
            android:id="@+id/ligne_location_max"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location Max"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ligne_tarif_min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tarif min"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" - "
            />
        <TextView
            android:id="@+id/ligne_tarif_max"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tarif Max"
            />
    </LinearLayout>

</LinearLayout>